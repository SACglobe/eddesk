# EdDesk Environment Variables
# Copy this file to .env.local and fill in your values.
# NEVER commit .env.local to git.

# ── Data Source Switch ─────────────────────────────────────────────
# true  = use local dummy data (src/core/data/local/tenant.data.js)
# false = call live API (requires NEXT_PUBLIC_API_BASE_URL)
USE_LOCAL_DATA=true

# ── API Configuration (required when USE_LOCAL_DATA=false) ────────
NEXT_PUBLIC_API_BASE_URL=https://api.eddesk.in

# ── Supabase (for future direct DB access, not used yet) ──────────
# NEXT_PUBLIC_SUPABASE_URL=
# NEXT_PUBLIC_SUPABASE_ANON_KEY=
